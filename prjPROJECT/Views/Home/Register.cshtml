@model prjPROJECT.Models.tMember

@{
    ViewBag.Title = "會員註冊";
}

<br />

<h1>會員註冊</h1>

<!-- 開始一個表單區域，提交後會導向對應 Controller 的對應 Action -->
<!-- 用法等同於 <div> </ div> -->
@using (Html.BeginForm("Register", "Home", FormMethod.Post))
{
    <!-- 生成反偽造標記，用於預防CSRF攻擊 -->
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.fMem_UserID, htmlAttributes: new { @class = "control-label col-md-2", style = "font-size: 18px;" })
            <div class="col-md-10">
                <!-- 生成輸入框 -->
                @Html.EditorFor(model => model.fMem_UserID, new { htmlAttributes = new { @class = "form-control" } })
                <!-- 生成驗證訊息 -->
                @Html.ValidationMessageFor(model => model.fMem_UserID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fMem_Pwd, htmlAttributes: new { @class = "control-label col-md-2", style = "font-size: 18px;" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fMem_Pwd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fMem_Pwd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fMem_Name, htmlAttributes: new { @class = "control-label col-md-2", style = "font-size: 18px;" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fMem_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fMem_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fMem_Email, htmlAttributes: new { @class = "control-label col-md-2", style = "font-size: 18px;" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fMem_Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fMem_Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fMem_Gender, htmlAttributes: new { @class = "control-label col-md-2", style = "font-size: 18px;" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fMem_Gender, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fMem_Gender, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fMem_Birthday, htmlAttributes: new { @class = "control-label col-md-2", style = "font-size: 18px;" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fMem_Birthday, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fMem_Birthday, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-pink">註冊</button>
                @ViewBag.Message
            </div>
        </div>
    </div>

    <style>

        .btn-pink {
            color: #fff;
            background-color: #f59dc9;
            border-color: #f59dc9;
        }

            .btn-pink:hover {
                color: #fff;
                background-color: #f590c3;
                border-color: #f590c3;
            }
    </style>
}

<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
